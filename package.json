{
  "name": "store-digital-assistant-api",
  "version": "0.1.0",
  "description": "The API of the Store Digital Assistant (SDA) project.",
  "main": "app.js",
  "scripts": {
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yello.bold, cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "lint": "./node_modules/.bin/eslint src --ext .ts",
    "lint:config": "./node_modules/.bin/eslint --init",
    "lint:fix": "./node_modules/.bin/eslint src --ext .ts --fix",
    "build": "tsc",
    "cypress": "node_modules/.bin/cypress open"
  },
  "apidoc": {
    "name": "Store Digital Assistant API",
    "title": "Store Digital Assistant API",
    "url": "https://example.com/api"
  },
  "author": "Sam Hirst (hirst.me) <SamuelJHirst@outlook.com>",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "concurrently": "^5.3.0",
    "cypress": "^6.8.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.8",
    "typescript": "^4.1.3",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1"
  }
}
